<% i = 0 %>

<% @datos.each { |m|  %>

<% bg_attr = i%2 == 0 ? "bgcolor='#dedede'" : "" %> 

<tr <%= bg_attr -%> >
   <%m.each { |d| %>
   <td align="center" ><font size= <%= @fontsize ? @fontsize.to_s : "1"-%> ><%= d -%></font></td>
   <% } %>
</tr>

<%
  i += 1
  } 

%>

<%
 if @grand_total
%>
   <tr>
      <td colspan=<%= @columnas.length - 1-%>> <b>Total: </b> </td>
      <td> <%= @grand_total -%> <td>
   </tr>
<%
 end
%>

</table> 


