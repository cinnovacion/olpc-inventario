<b><%= _("Date:")%> </b><%= @fecha_desde -%> a <%= @fecha_hasta -%>
<%end%>
</CENTER>

<table align="center">
<tr>
   <%@columnas.each { |t| %>
   <td><b><CENTER><u><%=t%></u></CENTER></b></td>
   <%}%>
